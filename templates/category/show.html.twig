{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category Info</h1>
    <div class="edit-delete-cta">
        <a href="{{ path('category_edit', {'id': category.id}) }}" class="edit-cta" data-toggle="tooltip" title="Edit this category"><i class="fas fa-edit"></i></a>
        {{ include('category/_delete_form.html.twig') }}

    </div>
    <table class="table">
        <tbody>

            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Products</th>
                <td>
                    {% for product in  category.products%}
                        <li class="product-ul">{{ product.name }} </li>
                    {% endfor %}

                </td>
            </tr>
        </tbody>
    </table>

    <div class="footer-cta">
        <a href="{{ path('category_index') }}" data-toggle="tooltip" title="Back to list"><i class="nc-icon nc-minimal-left"></i></a>


    </div>

    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}
