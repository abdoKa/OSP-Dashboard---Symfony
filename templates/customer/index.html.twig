{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}


{% block body %}
    <div class="row">
        <div class="col">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title"> Customer index</h4>
              </div>
              <div class="card-body">
                  <table class="table" id="customers">
                      <thead>
                      <tr>

                          <th>Name</th>

                          <th>Email</th>

                          <th>CCI</th>
                          <th>Phone</th>
{#                          <th>ZipCode</th>#}
{#                          <th>Website</th>#}
{#                          <th>Blocked</th>#}
{#                          <th>CreatedAt</th>#}
{#                          <th>UpdatedAt</th>#}
                          <th>actions</th>
                      </tr>
                      </thead>
                      <tbody>
                      {% for customer in customers %}
                          <tr>

                              <td>{{ customer.name }}</td>
                              <td>{{ customer.email }}</td>
                              <td>{{ customer.cci }}</td>
                              <td>{{ customer.phone }}</td>
{#                              <td>{{ customer.zipCode }}</td>#}
{#                              <td>{{ customer.website }}</td>#}
{#                              <td>{{ customer.blocked ? 'Yes' : 'No' }}</td>#}
{#                              <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>#}
{#                              <td>{{ customer.updatedAt ? customer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>#}
                              <td>
                                  <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                                  <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                              </td>
                          </tr>
                      {% else %}
                          <tr>
                              <td colspan="14">no records found</td>
                          </tr>
                      {% endfor %}
                      </tbody>
                  </table>
              </div>
                <div class="card-footer">
                    <a href="{{ path('customer_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
<script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#customers').DataTable();
        } );
    </script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css">
{% endblock %}