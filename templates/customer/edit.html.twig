{% extends 'base.html.twig' %}

{% block title %}Edit Customer{% endblock %}

{% block body %}
    <h1>Edit Customer</h1>
    <div class="edit-delete-cta">
        {{ include('customer/_delete_form.html.twig') }}

    </div>
{#    {{ include('customer/_form.html.twig', {'button_label': 'Update'}) }}#}
    {{ form_start(form) }}

    <div class="w-100">
        <div class="card w-100 p-lg-5" >
            <div class="row">

                <div class="col">
                    {{ form_row(form.name) }}

                </div>
                <div class="col">
                    {{ form_row(form.email) }}
                </div>
                <div class="col">
                    {{ form_row(form.cci) }}


                </div>
                <div class="col">
                    {{ form_row(form.phone) }}
                </div>
                <div class="col">
                    {{ form_row(form.website) }}

                </div>

            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.address.address) }}
                </div>
                <div class="col-md-auto">
                    {{ form_row(form.address.zipCode) }}
                </div>
                <div class="col col-lg-2">
                    {{ form_row(form.address.city) }}
                </div>
            </div>
        </div>
    </div>

    </div>
    <div class="footer-cta">
        <button class="btn update-cta">{{ button_label|default('Save') }}</button>
        <a href="{{ path('customer_index') }}" data-toggle="tooltip" title="Back to list"><i class="nc-icon nc-minimal-left"></i></a>


    </div>

    {{ form_end(form) }}

    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>

{% endblock %}
