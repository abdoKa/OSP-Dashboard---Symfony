{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Company Info</h1>
<div class="edit-delete-cta">
    <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="edit-cta" data-toggle="tooltip" title="Edit this customer"><i class="fas fa-edit"></i></a>
    {{ include('customer/_delete_form.html.twig') }}

</div>
    <table class="table">
        <tbody>

            <tr>
                <th>Company name</th>
                <td>{{ customer.name }}</td>
            </tr>

            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>

            <tr>
                <th>CCI</th>
                <td>{{ customer.cci }}</td>
            </tr>

            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ customer.address.city }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>zip code</th>
                <td>{{ customer.address.zipCode }}</td>
            </tr>

            <tr>
                <th>Website</th>
                <td>{{ customer.website }}</td>
            </tr>
            <tr>
                <th>Blocked</th>
                <td><span  class="st-lb">{{ customer.blocked ? 'Yes' : 'No' }}</span></td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

        </tbody>
    </table>

   <div class="footer-cta">
       <a href="{{ path('customer_index') }}" data-toggle="tooltip" title="Back to list"><i class="nc-icon nc-minimal-left"></i></a>


   </div>

    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}
